<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity.ProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/Abbbarabout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/TBtoolprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:title="@string/profile"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view_header"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@mipmap/farming"
                app:layout_constraintTop_toTopOf="parent" />

            <FrameLayout
                android:id="@+id/layout_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/view_header"
                app:layout_constraintTop_toBottomOf="@+id/view_header">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x160"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x50"
                            android:fontFamily="serif-monospace"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/s18"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/x20"
                            android:fontFamily="serif-monospace"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/s16" />

                        <TextView
                            android:id="@+id/mobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/x20"
                            android:fontFamily="serif-monospace"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/s16" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_avatar"
                app:civ_border_color="@color/white"
                app:civ_border_width="@dimen/x8"
                app:layout_constraintBottom_toTopOf="@+id/layout_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/layout_profile" />

            <TextView
                android:id="@+id/tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x20"
                android:layout_marginTop="@dimen/x8"
                android:text="@string/othersdetails"
                android:textAllCaps="true"
                android:textColor="@color/lightblue"
                android:textSize="@dimen/s16"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_profile" />

            <LinearLayout
                android:id="@+id/layout_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x16"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/tags">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x50">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/x8"
                        android:padding="@dimen/x4"
                        android:text="@string/educationtit"
                        android:textColor="@color/lightblue"
                        android:textSize="@dimen/s16" />


                    <TextView
                        android:id="@+id/TVEducation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/x8"
                        android:padding="@dimen/x4"
                        android:text="@string/educationtit"
                        android:textColor="@color/lightblue"
                        android:textSize="@dimen/s16" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x50">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/x8"
                        android:padding="@dimen/x4"
                        android:text="@string/gendertit"
                        android:textColor="@color/lightblue"
                        android:textSize="@dimen/s16" />


                    <TextView
                        android:id="@+id/TVGender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/x8"
                        android:padding="@dimen/x4"
                        android:text="@string/educationtit"
                        android:textColor="@color/lightblue"
                        android:textSize="@dimen/s16" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x50">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/x8"
                        android:padding="@dimen/x4"
                        android:text="@string/framname"
                        android:textColor="@color/lightblue"
                        android:textSize="@dimen/s16" />


                    <TextView
                        android:id="@+id/TVFarmname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/x8"
                        android:padding="@dimen/x4"
                        android:text="@string/educationtit"
                        android:textColor="@color/lightblue"
                        android:textSize="@dimen/s16" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x50">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/x8"
                        android:padding="@dimen/x4"
                        android:text="@string/framsize"
                        android:textColor="@color/lightblue"
                        android:textSize="@dimen/s16" />


                    <TextView
                        android:id="@+id/TVFarmsize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/x8"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/x4"
                        android:text="@string/educationtit"
                        android:textColor="@color/lightblue"
                        android:textSize="@dimen/s16" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x50">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/x8"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/x4"
                        android:text="@string/framstrret"
                        android:textColor="@color/lightblue"
                        android:textSize="@dimen/s16" />


                    <TextView
                        android:id="@+id/TVstreet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/x8"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/x4"
                        android:text="@string/educationtit"
                        android:textColor="@color/lightblue"
                        android:textSize="@dimen/s16" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x50">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/x8"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/x4"
                        android:text="@string/framcity"
                        android:textColor="@color/lightblue"
                        android:textSize="@dimen/s16" />


                    <TextView
                        android:id="@+id/TVcity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/x8"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/x4"
                        android:text="@string/educationtit"
                        android:textColor="@color/lightblue"
                        android:textSize="@dimen/s16" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/gray" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x50">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/x8"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/x4"
                        android:text="@string/framdistric"
                        android:textColor="@color/lightblue"
                        android:textSize="@dimen/s16" />


                    <TextView
                        android:id="@+id/TVdistric"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/x8"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/x4"
                        android:text="@string/educationtit"
                        android:textColor="@color/lightblue"
                        android:textSize="@dimen/s16" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x50">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/x8"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/x4"
                        android:text="@string/framstate"
                        android:textColor="@color/lightblue"
                        android:textSize="@dimen/s16" />


                    <TextView
                        android:id="@+id/TVstate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/x8"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/x4"
                        android:text="@string/educationtit"
                        android:textColor="@color/lightblue"
                        android:textSize="@dimen/s16" />

                </RelativeLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>